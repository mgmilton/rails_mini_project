<%= form_for [@user, @idea] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :category_id %>
  <%= f.collection_select(:category_id, Category.order(:name), :id, :name) %>

  <%= f.label :images %>
  <!-- <%= f.collection_select(:image_ids, Image.all, :id, :url, {}, {:multiple =>true})  %> -->
  <%= collection_check_boxes(:idea, :image_ids, Image.all, :id, :url)  %> </br>


  <%= f.submit %>
<% end %>
