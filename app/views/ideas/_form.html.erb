<%= form_for [@user, @idea] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :category_id %>
  <%= f.collection_select(:category_id, Category.order(:name), :id, :name) %>
</br>
  <%= f.label :images %>
  <% Image.all.each do |image| %>
</br>
    <%= check_box_tag 'image', image.id%>
    <%= image_tag image.url %>
    <% end %>

  <%= f.submit %>
<% end %>
