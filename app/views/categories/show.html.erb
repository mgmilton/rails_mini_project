<h3> Ideas in <%= @category.name %>: </h3>
<div class="row">
  <div class="col-6 col-md-4">
    <% @category.ideas.each do |idea| %>
      <li><%=link_to idea.title, category_idea_path(idea.category, idea) %> </li>
      <% end %>
      <li> <%= link_to "Create a Category", new_category_path %> </li> </br>

      <button type="button" class="btn btn-warning"><%= link_to "Edit", edit_category_path(@category) %></button>
      <button type="button" class="btn btn-danger"><%= link_to "Delete", category_path(@category), method:
      :delete %> </button></br>
  </div>

  <div class="col-6 col-md-4">
    <div class="carousel slide" id="myCarousel" data-interval="3000" style="width: 600px">
      <ol class="carousel-indicators">
        <% @category.ideas.each do |idea| %>
        <li data-target="#myCarousel" data-slide-to "<%= idea %>">
        <% end %>
      </ol>

      <div class="carousel-inner" role="listbox">
        <% @category.ideas.each do |idea| %>
          <div class="item <%= 'active' if idea == @category.ideas[0] %>">
              <img src="<%= idea.images.first.url %>">
          <div class="carousel-caption d-none d-md-block">
            <h3><%=link_to idea.title, category_idea_path(idea.category, idea) %></h3></br>
            <p><%= idea.description %> </p></br></br>
          </div>
        </div>
        <% end %>
      </div>
          <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
             </a>
               <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                 <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
    </div>
  </div>
  </div>
